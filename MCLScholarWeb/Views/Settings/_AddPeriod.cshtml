@model MCLScholarWeb.Models.Entity.ValidationPeriod

@{
    List<SelectListItem> academicYears = new List<SelectListItem>();
    List<SelectListItem> terms = new List<SelectListItem>();

    int yearStart = 2019;
    for (int i = yearStart - 5; i <= yearStart + 25; i++)
    {
        academicYears.Add(new SelectListItem()
        {
            Value = i.ToString(),
            Text = i + " - " + (i + 1)
        });
    }
    for (int i = 1; i <= 3; i++)
    {
        terms.Add(new SelectListItem()
        {
            Value = i.ToString(),
            Text = i.ToString()
        });
    }


}


@using (Html.BeginForm("AddPeriod", "Settings", FormMethod.Post, new { role = "form " }))
{
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Validation Period</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row px-3">
                        <h6 class="col-lg-3">Academic Year</h6>@Html.DropDownListFor(e => e.AcademicYearStart, academicYears, "Select an Academic Year", new { @class = "form-control col-lg-4" })
                        <h6 class="col-lg-2">Term</h6>@Html.DropDownListFor(e => e.Term, terms, "Select a Term", new { @class = "form-control col-lg-3" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}