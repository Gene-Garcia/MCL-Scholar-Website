@model MCLScholarWeb.Models.Entity.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";

    List<SelectListItem> programs = new List<SelectListItem>();
    List<SelectListItem> year = new List<SelectListItem>();
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-heading pt-3">
        </div>
        <div class="modal-body px-4 mx-4 ">
            @using (Html.BeginForm("RegisterDetails", "Account", FormMethod.Post, new { role = "form" }))
            {
                
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Email);
                <h5 class="pb-2">Add Student Account</h5>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label " })
                    @Html.TextBox("name",Model.Email, new { @class = "form-control",disabled="disabled" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="row ">
                    <div class="col-5"></div>
                    <button type="submit" class="btn btn-primary col-3 ">Next</button>
                </div>

                @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
            </p>*@
            }


