@model IEnumerable<MCLScholarWeb.Models.Entity.ValidationRequest>

@{
    ViewBag.Title = "ViewScholars";
}

    <div class="row my-2 p-2">
        <h4 class="col-lg-12 ml-1">Scholars: @ViewBag.ScholarshipName</h4>
        <div class="col-12">
            @Html.ActionLink("Return to List", "Scholarships", "Admin", null, new { @class = "text-primary" })
        </div>
    </div>

<div class="card rounded border p-3">
    <table class="table table-responsive" id="Data">
        <thead>
            <tr>
                <th>
                    Student ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Academic Year
                </th>
                <th>
                    Term
                </th>
                <th>
                    Date Approved
                </th>
                <th>
                    Approved By
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @Html.HiddenFor(modelItem => item.RequestID)
                    @Html.HiddenFor(modelItem => item.UserID)
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserProfiles.FirstOrDefault().StudentProfile.StudentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserProfiles.FirstOrDefault().StudentProfile.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserProfiles.FirstOrDefault().StudentProfile.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.UserProfiles.FirstOrDefault().StudentProfile.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidationPeriod.AcademicYearStart) to @Html.DisplayFor(modelItem => item.ValidationPeriod.AcademicYearEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidationPeriod.Term)
                    </td>
                    <td>
                        @item.DateEvaluated.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser1.Email)
                    </td>

                </tr>
            }

        </tbody>

    </table>

</div>

<script>
    
    $(document).ready(function () {
        var table = $('#Data').DataTable();
    });
</script>

