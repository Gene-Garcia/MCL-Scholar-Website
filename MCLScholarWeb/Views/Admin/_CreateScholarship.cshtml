@model MCLScholarWeb.Models.Entity.Scholarship

@{
    /**/
    List<SelectListItem> Types = (List<SelectListItem>)ViewData["Types"];
    ViewBag.Title = "CreateScholarship";
}

@using (Html.BeginForm("CreateScholarship", "Admin", FormMethod.Post))
{
    
    <div class="col-lg-12">
        <div class="row my-2 p-2">
            <h4 class="col-lg-9">Create New Scholarship</h4>
            <input type="submit" value="Submit" class="btn btn-primary col-md-2 mr-1" />
            <div class="col-12">
                @Html.ActionLink("Return to List", "Scholarships", "Admin", new { status = ViewBag.Status }, new { @class = "text-primary" })
            </div>
        </div>
        <div class="card rounded border p-3 row">
            <div class="col-lg-12">
                <div class="row my-2">
                    @Html.Label("Name", new { @class = "col-lg-2" })
                    @Html.TextBoxFor(e => e.ScholarshipName, new { @class = "form-control col-lg-10" })
                </div>
                <div class="row my-2">
                    @Html.Label("Type", new { @class = "col-lg-2" })
                    @Html.DropDownListFor(e => e.ScholarshipTypeID, Types, "Select a scholarship type", new { @class = "form-control col-lg-10" })
                </div>
                <div class="row my-2">
                    <p class="col-lg-2" style="font-size:15px;">Is an application required?</p>
                    @Html.EditorFor(e => e.ApplicationForm, new { @class = "form-control col-lg-10" })
                </div>
                <div class="row my-2">
                    @Html.Label("Description", new { @class = "col-lg-2" })
                    @Html.TextAreaFor(e => e.ScholarshipDescription, new { @class = "form-control col-lg-10", rows = "5" })
                </div>
            </div>
        </div>

    </div>

}




