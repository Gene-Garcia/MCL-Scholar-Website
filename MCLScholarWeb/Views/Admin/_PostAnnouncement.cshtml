@model MCLScholarWeb.Models.Entity.Announcement

@{
    ViewBag.Title = "Post Announcement";

}

<style>
    #a-post-announcement{
        text-decoration:underline;
    }
    .control-label{
        color: black;
    }
</style>

<div class="container">

    @try
    {
        if (ViewBag.errorMessage != null)
        {

            <div class="row">

                <div class="col-md-12 shadow p-3 bg-white rounded">

                    <p class="text-danger p-3">@ViewBag.errorMessage</p>

                </div>

            </div>

        }

    }
    catch (Exception e) { }


    <h1 class="display-4 mt-4 mb-5">Post Announcement</h1>

    <div class="card rounded border p-3">

        @using (Html.BeginForm("PostAnnouncement", "AdminContent", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="row">
                    @*@Html.LabelFor(model => model.AnnouncementSubject, htmlAttributes: new { @class = "control-label col-md-10" })*@
                    <p class="control-label col-md-10">Announcement Subject</p>
                    <p class="control-label col-md-2" style="margin-right:-50px;">@DateTime.Now.ToString("MM/dd/yyyy")</p>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.AnnouncementSubject, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.AnnouncementSubject, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    @*@Html.LabelFor(model => model.AnnouncementContent, htmlAttributes: new { @class = "control-label col-md-12" })*@
                    <p class="control-label col-md-12">Announcement Content</p>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.AnnouncementContent, new { @class = "form-control", required = "required", rows = "5" })
                        @Html.ValidationMessageFor(model => model.AnnouncementContent, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-12">Upload Images</p>
                <input type="file" name="photos" multiple="" class="" accept="image/*" />
            </div>

            <div class="form-group">
                <center>
                    <div class="col-md-8">
                        <input type="submit" value="Post Announcement" class="btn btn-success btn-block" />
                    </div>
                </center>
            </div>
        }
    </div>
</div>
