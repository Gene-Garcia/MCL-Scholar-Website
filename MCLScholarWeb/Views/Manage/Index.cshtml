@model MCLScholarWeb.Models.Entity.DetailsViewModel

@{
    ViewBag.Title = "Profile";
    string confirmed = "No";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

    if (ViewBag.Confirmed)
    {
        confirmed = "Yes";
    }

}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="row">

                <div class="col-lg-12">
                    <h3 class="display-5 mt-4 mb-5">Account</h3>
                    <div class="card p-4 m-2 shadow">
                        <div class="row pl-4 pt-3">
                            <p class="col-lg-3">Email<p>
                                <div class="col-lg-9 my-2">
                                    <div class="border rounded p-3 "> @User.Identity.Name</div>
                                </div>

                            <p class="col-lg-3">Email Confirmed<p>
                                <div class="col-lg-9 my-2">
                                    <div class="border rounded p-3 "> @confirmed</div>
                                </div>
                        </div>

                    </div>

                </div>
                <div class="col-lg-12">
                    <h3 class="display-5 mt-4 mb-5">Login Details</h3>
                    <div class="card p-4 m-2 shadow">
                        <div class="row pt-3">
                            <div class="col-lg-12">
                                Password:
                                [
                                @if (Model.IndexViewModel.HasPassword)
                                {
                                    @Html.ActionLink("Change your password", "ChangePassword")
                                }
                                else
                                {
                                    @Html.ActionLink("Create", "SetPassword")
                                }
                                ]
                            </div>
                        </div>
                    </div>


                </div>

            </div>

        </div>








        <div class="col-lg-6">
            <h3 class="display-5 mt-4 mb-5">Profile</h3>

            <div class="card p-4 m-2 shadow">
                <div class="row pl-4 pt-3">

                    <p class="col-lg-3">Name<p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 "> @Html.DisplayFor(model => model.UserProfile.StudentProfile.FirstName) @Html.DisplayFor(model => model.UserProfile.StudentProfile.MiddleName) @Html.DisplayFor(model => model.UserProfile.StudentProfile.LastName)</div>
                        </div>

                    <p class="col-lg-3"> Student ID <p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProfile.StudentProfile.StudentID)
                            </div>
                        </div>


                    <p class="col-lg-3">Contact Number<p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProfile.StudentProfile.ContactNumber)
                            </div>
                        </div>

                    <p class="col-lg-3">Department<p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProfile.StudentProfile.Department)
                            </div>
                        </div>


                    <p class="col-lg-3">Program<p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProgram.Program.ProgramName)
                            </div>
                        </div>


                    <p class="col-lg-3">Year<p>
                        <div class="col-lg-9 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProgram.Year)
                            </div>
                        </div>

                    <p class="col-lg-3">GWA<p>
                        <div class="col-lg-3 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProfile.StudentProfile.GWA)
                            </div>
                        </div>

                    <p class="col-lg-3">TWA<p>
                        <div class="col-lg-3 my-2">
                            <div class="border rounded p-3 ">
                                @Html.DisplayFor(model => model.UserProfile.StudentProfile.TWA)
                            </div>
                        </div>





                </div>

            </div>

        </div>

    </div>
</div>


