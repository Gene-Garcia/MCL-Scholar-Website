@model IEnumerable<MCLScholarWeb.Models.Entity.Scholarship>

@{
    ViewBag.Title = "Scholar Selection";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<style>
    #h-scholars {
        font-weight: bold;
    }
    .card {
        border-color: white;
        border-radius: 10px;
    }
    .text-info {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<div class="container">

    @try
    {
        if (ViewBag.errorMessage != null)
        {

            <div class="row">

                <div class="col-md-12 shadow p-3 bg-white rounded">

                    <p class="text-danger p-3">@ViewBag.errorMessage</p>

                </div>

            </div>

        }

    }
    catch (Exception e) { }


    <h2 class="display-4 mt-4 mb-5">Scholars</h2>

    @if (Model != null)
    {

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 p-3 mb-3">
                    <div class="card shadow p-3 mb-3 bg-white rounded">
                        <div class="card-body text-center">

                            <a href="@Url.Action("Scholars", "WebsiteContent" , new { scholarshipID = item.ScholarshipID })" class="text-info" style="font-weight:400">
                                @item.ScholarshipName
                            </a>

                        </div>
                    </div>
                </div>
            }
        </div>

    }
</div>

